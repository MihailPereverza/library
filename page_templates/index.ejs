<header class="w3-container w3-center">
<% layout('layouts/base') %>
<h1><%= title %></h1>

</header>
<div class="w3-container w3-centered">
    <table class="w3-table w3-mobile">
        <thead>
        <tr class="w3-red">
            <th>ID</th>
            <th>Название</th>
            <th>Год выпуска</th>
            <th>Количество</th>
            <th>В аренде</th>
        </tr>
        </thead>
        <tbody>
        <% for(let i=0; i < data.length; i++){ %>
        <tr class="book-row">
            <td><%= data[i].id %></td>
            <td><%= data[i].title %></td>
            <td><%= data[i].year %></td>
            <td><%= data[i].count %></td>
            <td><%= Object.keys(data[i].readers).length %></td>
        </tr>
        <% } %>
        </tbody>
    </table>
</div>
<script src="js/rowCallback.js"></script>